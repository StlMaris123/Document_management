<% provide(:title, "SignUp") %>
<h1>Sign Up</h1>
<h5>Sign up to start enjoying our services</h5>
<%= form_for @user do |f|  %>
    <%= f.label :Name %>
    <%= f.text_field :name %>

    <%= f.label :Email %>
    <%= f.email_field :email %>

    <%= f.label :Password %>
    <%= f.password_field :password %>

    <%= f.label :Password_Confirmation %>
    <%= f.password_field :Password_Confirmation %>

    <%= f.submit "SignUp", class: "button large" %>
    <% end %>
