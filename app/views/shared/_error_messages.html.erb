<div class= "errors">
    <% if @user.errors.any? %>
        <div class ="callout alert">
        The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
        <% end %>
    </ul>
<% end %>
</div>

